{% extends "./base.njk" %}
{% import "./fragments/post.njk" as p %}

{% block content %}
    <div class="home">
        {% set posts = collections.post | reverse  %}
        {% set main = posts | first %}
        {{ p.post(main.data.title, main.data.subtitle,  main.data.img,  main.data.imgAlt,  main.data.content, main.page) }}

        <hr>
        <div class="home-posts">
            <h1>Latests[sic.] Posts</h1>
            <ul >
                {%- for post in posts.slice(0,10) -%}
                    <li class="home-posts-item">
                        <a href="{{ post.url }}">{{ post.data.title }} @ {{ post.page.date | formatDate }}</a>
                        <br>
                        <em>{{ post.data.subtitle }}</em>
                    </li>
                {%- endfor -%}
            </ul>
        </div>
    </div>
{% endblock %}