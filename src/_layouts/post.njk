{% extends "./base.njk" %}

{% block content %}
    <div class="post-image-container">
        <div class="post-image">
            {% image img,
            imgAlt %}
        </div>
    </div>

    {% block title %}
        <h1>{{ title }}</h1>
        <h2 class="post-subtitle">{{ subtitle }} @ {{ page.date.toLocaleDateString() }}</h2>
    {% endblock %}

    {{ super() }}
{% endblock %}